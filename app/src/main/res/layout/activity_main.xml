<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bademjooni"
    tools:context=".MainActivity">
    <ScrollView
        android:id="@+id/scroll_view"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/spade_medium"
                android:paddingTop="@dimen/spade_medium"
                android:paddingRight="@dimen/spade_medium"
                android:paddingBottom="@dimen/spade_xlarge">


                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/spade_medium"
                    android:id="@+id/cv_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="250dp"
                >

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_person" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_marginTop="@dimen/spade_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/first_and_last_name"
                    android:gravity="center"
                    android:id="@+id/tv_name"
                    android:textColor="@color/white"
                    android:textSize="25sp"/>

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:rating="3"
                    android:numStars="5"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spade_small"
                    android:text="@string/Bio"
                    android:id="@+id/tv_bio"
                    android:gravity="center|right"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>



            </LinearLayout>

    </ScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:background="@drawable/rectangle_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/recycler_viwe"
        />


</androidx.constraintlayout.widget.ConstraintLayout>