<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_items"
    android:padding="@dimen/spade_middle"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/rv_project_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="برنامه پارتنر"
        android:textSize="@dimen/text_size_xlarge"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/black"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/tv_remainder_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="زمان باقی مانده :۲ روز"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintTop_toBottomOf="@id/rv_project_name"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/black"

        >

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>